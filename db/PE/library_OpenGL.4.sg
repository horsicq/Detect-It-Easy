meta("library", "OpenGL");

function detect() {
    if (PE.isLibraryPresentExp(/opengl/i)) {
        bDetected = true;
    } else if (PE.isExportFunctionPresentExp(/^ANGLE(GetDisplayPlatform|ResetDisplayPlatform)/)) {
        sVersion = "ANGLE";
        sOptions = "static"; // EAT
        bDetected = true;
    }

    return result();
}